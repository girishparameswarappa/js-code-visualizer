{
  "name": "js-code-visualizer",
  "version": "1.0.0",
  "description": "Interactive JavaScript code execution visualizer with step-by-step debugging, variable inspection, call stack display, and recursion tree visualization",
  "main": "src/js/app.js",
  "scripts": {
    "build": "webpack --mode production",
    "dev": "webpack --mode development --watch",
    "start": "live-server dist --port=3000",
    "serve": "npm run build && npm run start",
    "deploy": "npm run build && gh-pages -d dist",
    "test": "jest"
  },
  "keywords": [
    "javascript",
    "visualizer",
    "debugger",
    "code-execution",
    "recursion",
    "algorithm"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@babel/standalone": "^7.24.0",
    "@codemirror/lang-javascript": "^6.2.0",
    "@codemirror/theme-one-dark": "^6.1.0",
    "acorn": "^8.15.0",
    "codemirror": "^6.0.1",
    "d3": "^7.9.0",
    "js-interpreter": "^5.0.0"
  },
  "devDependencies": {
    "css-loader": "^6.10.0",
    "gh-pages": "^6.1.0",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.7.0",
    "live-server": "^1.2.2",
    "style-loader": "^3.3.4",
    "webpack": "^5.90.0",
    "webpack-cli": "^5.1.0"
  }
}
